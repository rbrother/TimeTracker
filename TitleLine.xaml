<UserControl x:Class="KeyLoggerGui.TitleLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition MinWidth="50"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Height="2" Fill="Black" Margin="8,0,0,0" Stroke="Transparent"/>
        <Label Name="title" Content="Title Text" Grid.Column="1" Margin="16,0,16,0" VerticalAlignment="Center" FontSize="14" FontWeight="bold" HorizontalAlignment="Right">
        </Label>
        <Rectangle Grid.Column="2" Height="2" Fill="Black" Margin="0,0,8,0" Stroke="Transparent">
        </Rectangle>
    </Grid>
</UserControl>
